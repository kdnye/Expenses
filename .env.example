# Server settings
NODE_ENV=development
PORT=3000

# Authentication
ADMIN_JWT_SECRET=change-me

# Receipt upload limits
RECEIPT_MAX_BYTES=10485760
RECEIPT_MAX_FILES=5
RECEIPT_URL_TTL_SECONDS=900

# Receipt storage provider
RECEIPT_STORAGE_PROVIDER=memory

# Amazon S3 configuration
S3_BUCKET=
S3_REGION=
S3_RECEIPT_PREFIX=receipts
S3_ENDPOINT=
S3_FORCE_PATH_STYLE=false
S3_PUBLIC_URL_TEMPLATE=

# Google Cloud Storage configuration
GCS_BUCKET=
GCS_RECEIPT_PREFIX=receipts
GCS_PUBLIC_URL_TEMPLATE=

# Google Drive configuration
GDRIVE_FOLDER_ID=
GDRIVE_SCOPES=https://www.googleapis.com/auth/drive.file
GDRIVE_CREDENTIALS_JSON=
